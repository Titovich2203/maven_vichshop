<?import javafx.scene.text.Font?>

<DialogPane fx:id="dialogPane" prefHeight="439.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vichshop.controller.popup.NewProduitController">
   <content>
      <AnchorPane prefWidth="296.0">
         <children>
            <VBox layoutX="10.0" layoutY="10.0" prefHeight="400.0" prefWidth="311.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="42.0" prefWidth="311.0" style="-fx-background-color: #243640;">
                     <children>
                        <FontAwesomeIcon iconName="USER" size="1.3em">
                           <HBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </HBox.margin>
                        </FontAwesomeIcon>
                        <Label alignment="CENTER" style="-fx-text-fill: #ffffff; -fx-font-size: 16px;" text="DONNEES PRODUIT" />
                     </children>
                  </HBox>
                  <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                     <children>
                        <TextField fx:id="txtLibelle" prefHeight="25.0" prefWidth="175.0" promptText="Libelle">
                           <VBox.margin>
                              <Insets top="25.0" />
                           </VBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="txtPu" prefHeight="25.0" prefWidth="175.0" promptText="Prix unitaire">
                           <VBox.margin>
                              <Insets top="25.0" />
                           </VBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="txtPmin" prefHeight="25.0" prefWidth="175.0" promptText="Prix min">
                           <VBox.margin>
                              <Insets top="25.0" />
                           </VBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <TextField fx:id="txtQte" prefHeight="25.0" prefWidth="175.0" promptText="Qte stock">
                           <VBox.margin>
                              <Insets top="25.0" />
                           </VBox.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </TextField>
                        <Button fx:id="btnNewProduit" mnemonicParsing="false" onAction="#NewProduit" prefWidth="100.0" style="-fx-background-color: #3fa23c; -fx-text-fill: #ffffff;" text="Nouveau">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </Button>
                        <Button fx:id="btnModifier" layoutX="116.0" layoutY="311.0" mnemonicParsing="false" onAction="#updateProduit" prefWidth="100.0" style="-fx-background-color: #4e6cb3; -fx-text-fill: #ffffff;" text="Modifier" />
                     </children>
                     <padding>
                        <Insets bottom="25.0" left="25.0" right="25.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </content>
</DialogPane>
